<Window x:Class="LooklessControlsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:looklessControls="clr-namespace:LooklessControls;assembly=LooklessControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <TabControl>
        <TabItem Header="Control 1">
            <looklessControls:LooklessControl Title="Customized Lookless Control">
                <looklessControls:LooklessControl.CustomContent>

                    <Border Background="Gainsboro" BorderThickness="1" Margin="4,4,4,4">

                        <!-- Any content that you want to display can be provided here -->
                        <Button Content="Press Me"/>

                    </Border>
                </looklessControls:LooklessControl.CustomContent>
            </looklessControls:LooklessControl>
        </TabItem>
        <TabItem Header="Control 2">
            <looklessControls:ImplementationControl/>
        </TabItem>
    </TabControl>

</Window>
